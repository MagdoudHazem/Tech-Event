{% extends 'base.html.twig' %}

{% block body %}
    <h1>Material</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ material.id }}</td>
            </tr>
            <tr>
                <th>Typetable</th>
                <td>{{ material.typetable }}</td>
            </tr>
            <tr>
                <th>Nbtable</th>
                <td>{{ material.nbtable }}</td>
            </tr>
            <tr>
                <th>Nbchaise</th>
                <td>{{ material.nbchaise }}</td>
            </tr>
            <tr>
                <th>Typesalle</th>
                <td>{{ material.typesalle }}</td>
            </tr>
            <tr>
                <th>Typelumiere</th>
                <td>{{ material.typelumiere }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{% if material.createdat %}{{ material.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('material_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('material_edit', { 'id': material.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
