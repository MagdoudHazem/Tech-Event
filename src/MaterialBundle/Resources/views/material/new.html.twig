{% extends 'base.html.twig' %}

{% block body %}
<div class="col-lg-12">
        {{ form_start(form, { 'attr': {'class': 'card'} }) }}
        <div class="card-body">
            <h3 class="card-title">Material creation</h3>
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="form-label">Type Table</label>
                        {{ form_widget(form.typetable, { 'attr': {'class': 'form-control', 'placeholder': 'Type de table'} }) }}
                    </div>
                </div>
                <div class="col-sm-6 col-md-3">
                    <div class="form-group">
                        <label class="form-label">Nombre de table</label>
                        {{ form_widget(form.nbtable, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre de table'} }) }}
                    </div>
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="form-group">
                        <label class="form-label">Nombre de chaise</label>
                        {{ form_widget(form.nbchaise, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre de chaise'} }) }}
                    </div>
                </div>
                <div class="col-sm-6 col-md-6">
                    <div class="form-group">
                        <label class="form-label">Type de salle</label>
                        {{ form_widget(form.typesalle, { 'attr': {'class': 'form-control', 'placeholder': 'Type de salle'} }) }}
                    </div>
                </div>
                <div class="col-sm-6 col-md-6">
                    <div class="form-group">
                        <label class="form-label">Type de lumière</label>
                        {{ form_widget(form.typelumiere, { 'attr': {'class': 'form-control', 'placeholder': 'Type de lumière'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
        {{ form_end(form) }}
</div>
  {#  <ul>
        <li>
            <a href="{{ path('material_index') }}">Back to the list</a>
        </li>
    </ul>#}
{% endblock %}
